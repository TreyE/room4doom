    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'wad'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=wad"
                ],
                "filter": {
                    "name": "wad",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'load_wads'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=load_wads",
                    "--package=wad"
                ],
                "filter": {
                    "name": "load_wads",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
